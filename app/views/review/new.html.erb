<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6">
    <% if @card %>
      <%= form_tag(review_index_path, class: "form-vertical") do %>
      <div class="form-group">
        <%= label_tag(:translation, @card.original_text, class: "control-label") %>
        <%= text_field_tag(:translation, nil, class: "form-control",
          required: true, placeholder: "перевод") %>
      </div>
        <%= hidden_field_tag(:card_id, @card.id) %>
        <%= submit_tag("Проверить", class: "btn btn-success") %>
      <% end %>      
    <% else %>
      <h3 class="center">Все карточки проверены</h3>
    <% end %>
  </div>
  <div class="col-xs-3"></div>
</div>
