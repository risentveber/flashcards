<% if @cards.any? %>
  <table id ="tablework" class="table table-bordered table-striped table-condensed">
    <thead>
      <tr>
        <th>Исохдный текст</th>
        <th>Перевод</th>
        <th>Дата обзора</th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date.strftime("%d/%m/%Y") if card.review_date %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>Ни одной карточки не добавлено.</h2>
<% end %>
